{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    },
    "files": [
      "test/format-graphql/**/*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "bin": {
    "format-graphql": "./dist/bin/index.js"
  },
  "dependencies": {
    "graphql": "^15.1.0",
    "yargs": "^15.3.1"
  },
  "description": "Formats GraphQL schema definition language (SDL) document.",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-transform-flow-strip-types": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/register": "^7.10.1",
    "ava": "^3.9.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-export-default-name": "^2.0.4",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-canonical": "^20.0.6",
    "flow-bin": "^0.127.0",
    "flow-copy-source": "^2.0.9",
    "husky": "^4.2.5",
    "nyc": "^15.1.0",
    "semantic-release": "^17.0.8"
  },
  "engines": {
    "node": ">=10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "graphql",
    "schema",
    "sdl",
    "sort",
    "lint",
    "format"
  ],
  "main": "./dist/index.js",
  "name": "format-graphql",
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gajus/format-graphql.git"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "dev": "NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps --watch",
    "lint": "eslint ./src ./test && flow",
    "test": "NODE_ENV=test ava --serial --verbose"
  },
  "version": "1.3.0"
}
